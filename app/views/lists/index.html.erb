<div class="container m-20 mt-5">
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do  %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : asset_path("list_base.jpg") %>)">
          <h1><%= list.name.upcase %></h1>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
